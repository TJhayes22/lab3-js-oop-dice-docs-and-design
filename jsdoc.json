{
  "source": {
    "include": ["src/domain", "README.md"],
    "includePattern": ".+\\.(js|mjs|cjs)$",
    "excludePattern": "(node_modules)"
  },
  "opts": {
    "destination": "./docs/generated",
    "recurse": true,
    "template": "templates/default",
    "readme": "README.md"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true,
    "default": {
      "outputSourceFiles": true,
      "includeDate": true,
      "useLongnameInNav": false
    }
  },
  "metadata": {
    "title": "Lab 3: Dice Simulation Documentation",
    "description": "API documentation for the dice simulation system"
  }
}